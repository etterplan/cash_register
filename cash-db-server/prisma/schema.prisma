datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Guests {
  id        Int     @id @default(autoincrement())
  firstName String
  lastName  String
  email     String  @unique
}

model Articles {
  id        Int     @id @default(autoincrement())
  article   String
  price     String
}

model BarAccount {
  id          Int     @id @default(autoincrement())
  guest_id    Int
  time        String
  purchase_id Int
}

model Purchase {
  id          Int     @id @default(autoincrement())
  purchase_id Int
  article     String
  amount      String
  price       String
}
